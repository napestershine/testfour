{% extends 'base.html.twig' %}

{% block body %}
    <h1>ProductCategories list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Level</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for productCategory in productCategories %}
            <tr>
                <td><a href="{{ path('productcategories_show', { 'id': productCategory.id }) }}">{{ productCategory.id }}</a></td>
                <td>{{ productCategory.name }}</td>
                <td>{{ productCategory.level }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('productcategories_show', { 'id': productCategory.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('productcategories_edit', { 'id': productCategory.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('productcategories_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
